generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int    @id @default(autoincrement())
  foreignUserId String
  flows         Flow[]
}

model Flow {
  id         Int    @id @default(autoincrement())
  name       String
  when       Json
  steps      Json
  currStepNumber Int    @default(0)
  users      User[]
}

model Event {
  id Int @id @default(autoincrement())
  name      String
  occuredAt DateTime @default(now())
}
